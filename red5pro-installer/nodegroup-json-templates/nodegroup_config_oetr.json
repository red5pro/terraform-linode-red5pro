{
    "name": "nodegroup-oetr",
    "description": "Stream Manager 2.0 OCI Node group with Origin, Edge, Transcoder and Relay",
    "cloudProperties": "environment=NODE_ENVIRONMENT;subnet=NODE_SUBNET_NAME;security_group=NODE_SECURITY_GROUP_NAME",
    "cloudPlatform": "OCI",
    "isScalingPaused": false,
    "images": {
        "base_image": {
            "name": "base_image",
            "image": "NODE_IMAGE_NAME",
            "cloudProperties": "instance_type=ORIGIN_INSTANCE_TYPE"
        }
    },
    "roles": {
        "origin": {
            "name": "origin",
            "imageName": "base_image",
            "capabilities": ["PUBLISH"],
            "propertyOverrides": []
        },
        "edge": {
            "name": "edge",
            "imageName": "base_image",
			"parentRoleName": "relay",
			"parentCardinality": "AUTOGROUP",
            "capabilities": ["SUBSCRIBE"],
            "propertyOverrides": []
        },
        "transcoder": {
            "name": "transcoder",
            "imageName": "base_image",
            "capabilities": ["TRANSCODE"],
            "propertyOverrides": []
        },
        "relay": {
            "name": "relay",
            "imageName": "base_image",
            "parentRoleName": "origin",
            "parentCardinality": "GLOBAL",
            "capabilities": [],
            "propertyOverrides": []
        }
    },
    "groups": {
        "default": {
            "subGroupName": "default",
            "nodeGroupName": "nodegroup-oetr",
            "groupType": "main",
            "rulesByRole": {
                "origin": {
                    "nodeGroupName": "nodegroup-oetr",
                    "subGroupName": "default",
                    "nodeRoleName": "origin",
                    "min": "ORIGINS_MIN",
                    "max": "ORIGINS_MAX",
                    "increment": 1,
                    "outExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) > 1.0",
                    "inExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) < 0.2",
                    "capacityRankingExpression": "cpu.loadavg.1min / cpu.processors",
                    "capacityLimitExpression": "2.0"
                },
                "edge": {
                    "nodeGroupName": "nodegroup-oetr",
                    "subGroupName": "default",
                    "nodeRoleName": "edge",
                    "min": "EDGES_MIN",
                    "max": "EDGES_MAX",
                    "increment": 1,
                    "outExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) > 1.0",
                    "inExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) < 0.2",
                    "capacityRankingExpression": "cpu.loadavg.1min / cpu.processors",
                    "capacityLimitExpression": "2.0"
                },
                "transcoder": {
                    "nodeGroupName": "nodegroup-oetr",
                    "subGroupName": "default",
                    "nodeRoleName": "transcoder",
                    "min": "TRANSCODERS_MIN",
                    "max": "TRANSCODERS_MAX",
                    "increment": 1,
                    "outExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) > 1.0",
                    "inExpression": "avg(cpu.loadavg.1min) / avg(cpu.processors) < 0.2",
                    "capacityRankingExpression": "cpu.loadavg.1min / cpu.processors",
                    "capacityLimitExpression": "2.0"
                },
                "relay": {
                    "nodeGroupName": "nodegroup-oetr",
                    "subGroupName": "default",
                    "nodeRoleName": "relay",
                    "min": "RELAYS_MIN",
                    "max": "RELAYS_MAX",
                    "increment": 1,
					"outExpression": "avg(connections.clusterchildren) > 8",
					"inExpression": "avg(connections.clusterchildren) < 2",
					"capacityRankingExpression": "0",
					"capacityLimitExpression": "0"
                }
            },
            "cloudProperties": "region=NODE_GROUP_REGION"
        }
    },
    "internalVersionCount": 0
}